<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".activities.CadastroActivity">
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName|textCapWords"
                    android:ems="10"
                    android:id="@+id/nome" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="16dp" android:layout_marginRight="16dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp" android:layout_marginTop="16dp"
                    app:layout_constraintTop_toTopOf="parent" android:hint="Qual o nome de seu estabelecimento?"/>
            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName|textCapSentences"
                    android:ems="10"
                    android:id="@+id/localizacao"
                    app:layout_constraintTop_toBottomOf="@+id/nome" android:layout_marginTop="16dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="16dp"
                    android:layout_marginRight="16dp" android:hint="Descreva de forma curta onde fica"/>
            <TextView
                    android:text="Em qual campus você fica?"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvCampus" android:textColor="@color/textPrimary"
                    android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/localizacao"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
            />
            <Spinner
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/campus" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="16dp"
                    android:layout_marginRight="16dp"
                    app:layout_constraintHorizontal_bias="0.0" app:layout_constraintTop_toBottomOf="@+id/tvCampus"
                    android:layout_marginTop="16dp" android:background="@android:drawable/btn_dropdown"/>
            <TextView
                    android:text="Quais métodos de pagamento você aceita?"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView3"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/campus" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
                    android:textColor="@color/textPrimary"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/linearLayout" android:padding="4dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView3"
                    android:layout_marginTop="16dp">
                <CheckBox
                        android:text="Dinheiro"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/cbDinheiro" android:layout_weight="1"/>
                <CheckBox
                        android:text="Débito"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/cbDebito" android:layout_weight="1"/>
                <CheckBox
                        android:text="Crédito"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/cbCredito" android:layout_weight="1"/>
                <CheckBox
                        android:text="Picpay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/cbPicpay" android:layout_weight="1"/>
            </LinearLayout>
            <TextView
                    android:text="Você também pode inserir um telefone para contato, caso queira"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/txContato"
                    android:layout_marginTop="12dp"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp" android:layout_marginRight="16dp" android:layout_marginEnd="16dp"
                    app:layout_constraintHorizontal_bias="0.0"/>
            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="phone"
                    android:ems="10"
                    android:id="@+id/contato" android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/txContato" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="16dp" android:layout_marginRight="16dp"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/contato" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
                    android:layout_marginRight="16dp" android:gravity="center" android:id="@+id/linearLayout2">
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    <TextView
                            android:text="Horário de abertura"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/textView7"/>
                    <EditText
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:inputType="time"
                            android:ems="10"
                            android:id="@+id/horarioInicial"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    <TextView
                            android:text="Horário de fechamento"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/textView9"/>
                    <EditText
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:inputType="time"
                            android:ems="10"
                            android:id="@+id/horarioFinal"/>
                </LinearLayout>
            </LinearLayout>
            <Button
                    android:text="Selecionar Foto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imagem" android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="16dp" android:layout_marginStart="16dp" android:onClick="pickImage"/>
            <Button
                    android:text="Marcar Localização"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/geolocalizacao" android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout2" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="16dp" android:layout_marginRight="16dp" android:onClick="pickLocation"/>
            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine|textCapWords"
                    android:gravity="start|top"
                    android:ems="10"
                    android:id="@+id/descricao" android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/imagem" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="16dp" android:layout_marginRight="16dp"
                    android:maxLength="500" android:hint="Dê uma curta descrição de seu estabelecimento"/>
            <com.hootsuite.nachos.NachoTextView
                    android:id="@+id/nacho_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/descricao"
                    android:hint="Tags separadas por vírgula (Ex.: comida vegan, massas, etc)"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginLeft="16dp" android:layout_marginStart="16dp" android:layout_marginRight="16dp"
                    android:layout_marginEnd="16dp"/>
        </android.support.constraint.ConstraintLayout>
    </ScrollView>
    <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true" app:srcCompat="@android:drawable/ic_menu_save"
            android:id="@+id/fabSave" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="16dp" android:onClick="saveForm"/>
</android.support.constraint.ConstraintLayout>