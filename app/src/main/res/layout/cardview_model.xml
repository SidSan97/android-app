<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/linlay">

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/cv" android:padding="8dp" app:cardElevation="4dp"
            android:layout_margin="8dp" android:onClick="onClickCard">
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/conslay">
            <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp" tools:srcCompat="@drawable/ic_skulls_41"
                    android:id="@+id/imagem" android:contentDescription="Imagem do Vendedor"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="8dp"/>
            <TextView
                    android:text="Teste"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/nome" app:layout_constraintStart_toEndOf="@+id/imagem"
                    android:layout_marginLeft="12dp" android:layout_marginStart="12dp" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent" android:textColor="@color/textPrimary"
                    android:textStyle="bold"/>
            <TextView
                    android:text="Aberto agora!"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/aberto"
                    app:layout_constraintTop_toBottomOf="@+id/nome"
                    android:layout_marginTop="8dp" app:layout_constraintStart_toEndOf="@+id/imagem"
                    android:layout_marginLeft="12dp" android:layout_marginStart="12dp"
                    android:textColor="@color/textPrimary"/>
            <TextView
                    android:text="Aceita cartão e dinheiro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/formasPagamento"
                    app:layout_constraintTop_toBottomOf="@+id/aberto" android:layout_marginTop="8dp"
                    app:layout_constraintStart_toEndOf="@+id/imagem" android:layout_marginLeft="12dp"
                    android:layout_marginStart="12dp" android:textColor="@color/textPrimary"/>
            <TextView
                    android:text="Próximo ao PAF I"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/localizacao"
                    app:layout_constraintTop_toBottomOf="@+id/formasPagamento"
                    android:layout_marginTop="8dp" app:layout_constraintStart_toEndOf="@+id/imagem"
                    android:layout_marginLeft="12dp" android:layout_marginStart="12dp"
                    android:textColor="@color/textPrimary"/>
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/categorias"
                    app:layout_constraintTop_toBottomOf="@+id/localizacao"
                    app:layout_constraintStart_toEndOf="@+id/imagem" android:layout_marginLeft="12dp"
                    android:layout_marginStart="12dp" android:layout_marginTop="12dp"
                    android:text="Comida vegetariana, doces, lanches" android:inputType="textMultiLine"
                    android:textColor="@color/textPrimary" android:singleLine="false"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
                    android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.0"/>
            <TextView
                    android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Etiam sollicitudin metus ac odio dictum, in iaculis ante cursus. Integer placerat ac quam efficitur sodales. Integer pellentesque mi vitae sem scelerisque, vitae facilisis tortor ultricies. Morbi vel placerat nulla. Integer eu erat sapien. Mauris blandit mi ac massa suscipit, quis molestie sem pharetra. Integer ornare euismod turpis porta semper. Duis facilisis ornare turpis id fringilla. Fusce sed commodo dolor. Mauris consectetur blandit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/descricao" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/imagem" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="1.0"
                    android:textColor="@color/textPrimary" android:gravity="fill"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>